<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="#2243b6"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="left|center" />

        <ImageButton
            android:id="@+id/refresh"
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:layout_marginLeft="22dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="refresh"
            android:src="@drawable/refresh1"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/ripple_effect"
            android:contentDescription="settings"
            android:src="@drawable/seting1"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Body -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="@drawable/ba_color"
        android:padding="2dp">

        <!-- Repeated structure for each day -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/border"
            android:layout_marginBottom="9dp">

            <TextView
                android:id="@+id/weather_icon"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textSize="22sp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/text_day"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/rain1"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cool \n 22C - 31C"
                android:textSize="18sp"
                android:padding="16dp" />
        </LinearLayout>

        <!-- Repeated structure for each day -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/uv"
            android:layout_marginBottom="9dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:textSize="22sp"
                android:gravity="center" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/sun1"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Super Hot \n 32C - 34C"
                android:textSize="18sp"
                android:padding="16dp" />
        </LinearLayout>

        <!-- Repeat the LinearLayout blocks for each day as per your code -->
        <!-- Example for Wed, Thur, Fri, Sat, Sun continues below... -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="9dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:textSize="22sp"
                android:gravity="center" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/lightsun"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warm \n 22C - 31C"
                android:textSize="18sp"
                android:padding="16dp" />
        </LinearLayout>

        <!-- Thur -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="9dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Thu"
                android:textSize="22sp"
                android:gravity="center" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/sun1"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hot \n 22C - 31C"
                android:textSize="18sp"
                android:padding="16dp" />
        </LinearLayout>


        <!-- Friday -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="9dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Frid"
                android:textSize="22sp"
                android:gravity="center" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/cloud1"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strong wind \n 22C - 29C"
                android:textSize="18sp"
                android:padding="16dp" />
        </LinearLayout>

        <!-- Continue for Saturday and Sunday -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/refresh_btn"
            android:layout_marginBottom="9dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Sat"
                android:textSize="22sp"
                android:gravity="center" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/rain1"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scatter Thuderstorms \n 20C - 38C"
                android:textSize="18sp"
                android:padding="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="9dp">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Sun"
                android:textSize="22sp"
                android:gravity="center" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/cloud1"
                android:padding="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heavy Rain \n 22C - 31C"
                android:textSize="18sp"
                android:padding="16dp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
